<View
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"

    controllerName="sap.ui.demo.walkthrough.controller.View1">
   <Page 
          id="login"
          title="login"
          showHeader="false">
       <content>
    
<!--  login yazılacak alt ust  ayarlaması yapılacak  -->
        <VBox width="100%"   height="100%" alignItems="Center" justifyContent="Center">
                 <Input
                    id="inputText"
                    type="Text"
                    placeholder="User" />
                 <Input
                   id="Pass"
                   type="Password"
                   placeholder="Password" />
                <Button 
                   id="log" 
                   text="Login"
                   press="Login"/>
        </VBox>




      </content>
   </Page>
   
</View>